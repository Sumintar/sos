<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:background="#F2F2F2"
    tools:context="in.ac.mnnit.sos.fragments.HomeFragment">


    <LinearLayout
        android:id="@+id/home_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="left">

        <ImageButton
            android:id="@+id/record"
            android:src="@drawable/ic_record"
            android:background="@drawable/blue_circular_background"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/flash"
            android:src="@drawable/ic_flash_off"
            android:background="@drawable/blue_circular_background"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/sound"
            android:src="@drawable/ic_volume_off"
            android:background="@drawable/blue_circular_background"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/nearby"
            android:src="@drawable/ic_near_me"
            android:background="@drawable/blue_circular_background"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_below="@id/home_tools"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>

    <Button
        android:id="@+id/dangerButton"
        android:text="I am in\r\ndanger"
        android:textColor="#FFF"
        android:letterSpacing="0.2"
        android:textStyle="bold"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:padding="15dp"
        android:background="@drawable/red_circular_background"
        android:layout_centerInParent="true"
        android:gravity="center" />

</RelativeLayout>